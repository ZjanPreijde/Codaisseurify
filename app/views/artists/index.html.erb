      <!-- Render body_header -->
      <%= render "shared/body_header" %>

      <div class="panel-heading text-center">
        <p><h1>Our Artists</h1></p>
      </div>

      <div class="panel-body">
      <% @artists.each do |artist| %>
        <% @songs = artist.songs %>
        <div class="col-md-6"> <!-- .artist-in-index -->
          <p>
            <%= link_to artist.name, artist, class: "btn btn-default cfy-button-artist" %>
          </p>
          <ul>
          <% @songs.each do |song| %>
            <li><%=song.title%></li>
          <% end %>
          </ul>
        </div>
        <% end %>
      </div>

      <!-- Render body_footer -->
      <%= render "shared/body_footer" %>
